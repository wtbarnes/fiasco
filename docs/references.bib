}

@article{young_chianti-atomic_2003,
  title = {{{CHIANTI-An Atomic Database}} for {{Emission Lines}}. {{VI}}. {{Proton Rates}} and {{Other Improvements}}},
  author = {Young, P. R. and Del Zanna, G. and Landi, E. and Dere, K. P. and Mason, H. E. and Landini, M.},
