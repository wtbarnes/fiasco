@article{landi_chianti-atomic_2002,
  title = {{{CHIANTI-An Atomic Database}} for {{Emission Lines}}. {{V}}. {{Comparison}} with an {{Isothermal Spectrum Observed}} with {{SUMER}}},
  author = {Landi, E. and Feldman, U. and Dere, K. P.},
  year = {2002},
  month = mar,
  journal = {The Astrophysical Journal Supplement Series},
  volume = {139},
  pages = {281--296},
  issn = {0067-0049},
  doi = {10.1086/337949},
  abstract = {CHIANTI is a database consisting of critically evaluated atomic data and  transition probabilities necessary to analyze spectral observations of optically thin plasmas. Previous papers described the content of the database and compared it to a solar active region spectrum between 170 and 450 \AA. The aim of the present paper is to compare CHIANTI predictions to off-disk spectral observations of the solar corona between 500 and 1500 \AA. The observed spectra were recorded by the SUMER instrument on board the Solar and Heliospheric Observatory using the full spectral range allowed by the instrument. Earlier works have demonstrated that the particular emitting plasma is isothermal at a temperature of 1.35\texttimes 106 K, making it ideal for the assessment of the accuracy of the CHIANTI database. This assessment of the CHIANTI database allowed us (1) to select lines and ions for which the agreement between theory and observation is good, (2) to identify several lines which are blended, and (3) to stress inconsistencies between a few lines and theory, thus showing where improvements to atomic data and transition probabilities are necessary.},
  keywords = {atomic data,SUN: CORONA,SUN: UV RADIATION}
}

@article{landi_chianti-atomic_2006,
  title = {{{CHIANTI-An Atomic Database}} for {{Emission Lines}}. {{VII}}. {{New Data}} for {{X-Rays}} and {{Other Improvements}}},
  author = {Landi, E. and Del Zanna, G. and Young, P. R. and Dere, K. P. and Mason, H. E. and Landini, M.},
  year = {2006},
  month = jan,
  journal = {ApJS},
  volume = {162},
  pages = {261--280},
  issn = {0067-0049},
  doi = {10.1086/498148},
  abstract = {The CHIANTI atomic database contains atomic energy levels, wavelengths,  radiative transition probabilities, and collisional excitation data for a large number of ions of astrophysical interest. CHIANTI also includes a suite of IDL routines to calculate synthetic spectra and carry out plasma diagnostics. Version 5 has been released, which includes several new features, as well as new data for many ions. The new features in CHIANTI are as follows: the inclusion of ionization and recombination rates to individual excited levels as a means to populate atomic levels; data for K{$\alpha$} and K{$\beta$} emission from Fe II to Fe XXIV; new data for high-energy configurations in Fe XVII to Fe XXIII; and a complete reassessment of level energies and line identifications in the X-ray range, multitemperature particle distributions, and photoexcitation from any user-defined radiation field. New data for ions already in the database, as well as data for ions not present in earlier versions of the database, are also included. Version 5 of CHIANTI represents a major improvement in the calculation of line emissivities and synthetic spectra in the X-ray range and expands and improves theoretical spectra calculations in all other wavelength ranges.},
  keywords = {atomic data,plasmas}
}

@article{landi_chianti-atomic_2006-1,
  title = {{{CHIANTI-An Atomic Database}} for {{Emission Lines}}. {{VIII}}. {{Comparison}} with {{Solar Flare Spectra}} from the {{Solar Maximum Mission Flat Crystal Spectrometer}}},
  author = {Landi, E. and Phillips, K. J. H.},
  year = {2006},
  month = sep,
  journal = {The Astrophysical Journal Supplement Series},
  volume = {166},
  pages = {421--440},
  issn = {0067-0049},
  doi = {10.1086/506180},
  abstract = {In the present work we describe the comparison of the fluxes predicted  by the latest version of the CHIANTI database (version 5.2) with the observed X-ray spectra of two solar flares from the Flat Crystal Spectrometer on board the Solar Maximum Mission on 1980 August 25 and 1985 July 2. The two flares were of GOES classes M1.5 and M4.5, respectively, and were observed in the 7.47-18.97 \AA{} wavelength range. The aim of the present work is to benchmark the CHIANTI database in this range in an effort to assess its accuracy and completeness. Very good agreement is found at all wavelengths, except for Fe XVIII and Fe XIX lines between 14.7 and 16.4 \AA. These discrepancies are discussed. A list of lines recommended for future diagnostic studies of X-ray sources is presented.},
  keywords = {atomic data,plasmas}
}

@article{landi_chiantiatomic_2009,
  title = {{{CHIANTI}}\textemdash{{An Atomic Database}} for {{Emission Lines}}. {{X}}. {{Spectral Atlas}} of a {{Cold Feature Observed}} with {{Hinode}}/{{EUV Imaging Spectrometer}}},
  author = {Landi, E. and Young, P. R.},
  year = {2009},
  month = nov,
  journal = {The Astrophysical Journal},
  volume = {706},
  pages = {1--20},
  issn = {0004-637X},
  doi = {10.1088/0004-637X/706/1/1},
  abstract = {In this work, we report on a cold, bright portion of an active region  observed by the Hinode/EUV Imaging Spectrometer. The emitting plasma was very bright at transition region temperatures, and the intensities of lines of ions formed between 105 and 106 K were enhanced over normal values. The data set constitutes an excellent laboratory where the emission of transition region ions can be tested. We first determine the thermal structure of the observed plasma, and then we use it (1) to develop a spectral atlas, and (2) to assess the quality of CHIANTI atomic data by comparing predicted emissivities with observed intensities. We identify several lines never observed before in solar spectra, and find an overall very good agreement between CHIANTI-predicted emissivities and observations.},
  keywords = {atomic data,line: identification,Sun: corona,Sun: transition region,SUN: UV RADIATION}
